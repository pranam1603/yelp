<% layout('layouts/boilerplate') %>

    <div>
        <h1 class="text-center my-3">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/edit/<%=camp._id%>?_method=PUT" method="POST">
                <div class="my-2">
                    <label class="form-label" for="title">Title: </label>
                    <input class="form-control" type="text" name="title" id="title" placeholder="Title" value="<%=camp.title%>">
                </div>
                <div class="my-2">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Location" value="<%=camp.location%>">
                </div>
                <div class="my-2">
                    <label class="form-label" for="price">Price: </label>
                    <div class="input-group">
                        <span class="input-group-text" id="price">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price" value="<%=camp.price%>">
                      </div>
                </div>
                <div class="my-2">
                    <label class="form-label" for="image">Image URL: </label>
                    <input class="form-control" type="text" name="image" id="image" placeholder="Image URL" value="<%=camp.image%>">
                </div>
                <div class="my-2">
                    <label class="form-label" for="description">Description: </label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="Description" value="<%=camp.description%>">
                </div>
                <div class="my-3">
                    <button class="btn btn-success" type="submit">Edit Campground</button>
                    <button class="btn btn-primary" href="/campgrounds">All Campground</button>
                </div>
            </form>
        </div>
    </div>