<% layout('layouts/boilerplate') %>

    <h1>All Campgrounds</h1>

        <% for (campground of campgrounds) { %>
            <div class="card my-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%=campground.image%>" alt="CampImage">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h2 class="card-title"><%=campground.title%></h2>
                            <p class="card-text"><%=campground.description%></p>
                            <p class="card-text">
                                <small class="text-muted"><%=campground.location%></small>
                            </p>
                            <a href="/campground/<%=campground._id%>" class="btn btn-primary">View Campground</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %> 
    </ul>
